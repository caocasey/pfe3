<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Selection</th>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Describe</th>
      <th>State</th>
      <th>Reference</th>
      <th>Categorie</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.Selection %></td>
        <td><%= item.title %></td>
        <td><%= item.subtitle %></td>
        <td><%= item.describe %></td>
        <td><%= item.state %></td>
        <td><%= item.reference %></td>
        <td><%= item.categorie %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

